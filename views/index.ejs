                            <% } %>
                        </div>
                        <div class="item-price">
                            <p>$<%= book.price %></p>
                        </div>
                        <form action="#">
                            <button type="submit">A침adir a la cesta</button>
                        </form>
                    </article>
                </a>
                <% } %>
            
            <% }) %>
        </section>

<!--Show recomended products-->

<!-- Seccion de productos-->

        <hr class="separator">

<!-- Subscription-->

        <div class="main-mail-subscription">
            <section class="main-subscription-container">
                <div class="main-mail-subscription-gap">
                    <div class="envelope-container">
                        <i class="fa-solid fa-envelope-open-text"></i>
                        <p>Recibe nuestras ofertas y novedades</p>
                        <div class="suscription-form">
                            <form action="/subscription" method="post">
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Correo electronico" name="news-subscription">
                                </div>
                                <div class="submit-button">
                                    <button type="submit" class="subscription-button" >Suscribete ahora</button>
                                </div>
                            </form>
                        </div>
                    </div>
