<!--Main-->

    <main>
<!-- Seccion de productos-->

<!--Show best selling products-->

        <section class="product-section">
            <header>
                <h1>Los m치s vendidos</h1>
            </header>

            <% books.forEach( book => { %>
                <% if (book.classification_id == '1') { %>
                <a href="/products/detail/<%= book.id%>">
                    <article class="book-item">
                        <div class="item-img">    
                            <img class="book-image" src="/images/products/<%= book.image ? book.image : 'default.jpeg' %>" alt="book-image">
                        </div>
                        <div class="item-info">
                            <h3><%= book.title %></h3>
                            <% if (book.author) { %>
                                <p><%= book.author.first_name + ' ' + book.author.last_name %></p>
                            <% } %>
                        </div>
                        <div class="item-price">
                            <p>$<%= book.price %></p>
                        </div>
                        <form action="#">
                            <button type="submit">A침adir a la cesta</button>
                        </form>
                    </article>
                </a>
                <% } %>
            
            <% }) %>
        </section>

<!--Show best selling products-->

        <hr class="separator">

<!--Show new released products-->

        <section class="product-section">
            <header>
                <h1>Nuevos lanzamientos</h1>
            </header>

            <% books.forEach( book => { %>
                <% if (book.classification_id == '2') { %>
                <a href="/products/detail/<%= book.id%>">
                    <article class="book-item">
                        <div class="item-img">    
                            <img class="book-image" src="/images/products/<%= book.image ? book.image : 'default.jpeg' %>" alt="book-image">
